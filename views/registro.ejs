<div ng-app="appReg" class="container" ng-controller="ctrlReg">
    <form role="form" action="#" method="POST">
        <br>
        <div class="form-group">
            <label for="inputName">Nombre</label>
            <input type="text" class="form-control" id="inputName" placeholder="nombre" ng-model="usuario.firstName" ng-style="wrongName"
                required>
            <small ng-bind="errName" style="color: red"></small>
        </div>

        <div class="form-group">
            <label for="inputSurnames">Apellidos</label>
            <input type="text" class="form-control" id="inputSurnames" ng-model="usuario.lastName" placeholder="Apellidos" ng-style="wrongSurname"
                required>
            <small ng-bind="errSurname" style="color: red"></small>
        </div>

        <div class="form-group">
            <label for="inputEmail1">Email</label>
            <input type="email" class="form-control" id="inputEmail" ng-model="usuario.email" aria-describedby="emailHelp" placeholder="Email"
                style="margin-bottom: 0px" ng-style="wrongEmail" required>
            <small ng-bind="errEmail" style="color: red"></small>
        </div>

        <div class="form-group">
            <label for="inputPassword1">Contrase単a</label>
            <input type="password" class="form-control" id="inputPassword1" placeholder="Contrase単a" ng-model="usuario.password" ng-style="wrongPassword"
                required>
            <small ng-bind="errPassword" style="color: red"></small>
        </div>

        <div class="form-group">
            <label for="inputPassword2">Repetir Contrase単a</label>
            <input type="password" class="form-control" id="inputPassword2" placeholder="Repetir contrase単a" ng-model="password2" ng-style="wrongPassword2"
                required>
            <div class="help-block with-errors"></div>
            <small ng-bind="errCompPassword" style="color: red"></small>
        </div>


        <button type="button" class="btn btn-primary" ng-click="registrar()">Registrar</button>
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js"></script>
<script src="/javascripts/registro.js"></script>
</body>

</html>